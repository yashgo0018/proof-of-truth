{
  "name": "@roller-money/contracts",
  "version": "1.0.0",
  "description": "Roller Money Smart Contracts",
  "private": true,
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "deploy:local": "forge script script/Deploy.s.sol:DeployScript --rpc-url http://localhost:8545 --private-key $PRIVATE_KEY --broadcast",
    "deploy:sepolia": "forge script script/Deploy.s.sol:DeployScript --rpc-url $SEPOLIA_RPC_URL --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "generate-abis": "bun run scripts/generate-abis.js",
    "build-and-generate": "forge build && bun run generate-abis",
    "install-deps": "forge soldeer install",
    "update-deps": "forge soldeer update",
    "clean": "forge clean"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
